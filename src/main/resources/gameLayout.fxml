<?import com.comp2042.GameOverPanel?>
<?import com.comp2042.PausePanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="610" styleClass="mainPane">
    <!-- 玩家1的方块面板 -->
    <GridPane fx:id="brickPanel" vgap="0" hgap="0"/>
    
    <!-- 玩家1的游戏板 -->
    <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="900" layoutY="300">
        <center>
            <GridPane fx:id="gamePanel" hgap="0" vgap="1" prefWidth="203" maxWidth="203"/>
        </center>
        <top>
            <VBox spacing="10" alignment="CENTER">
                <Label text="PLAYER 1" styleClass="nextBrickLabel"/>
                <Label text="SCORE" styleClass="nextBrickLabel"/>
                <Label fx:id="scoreLabel" text="0" styleClass="scoreClass"/>
            </VBox>
        </top>
    </BorderPane>

    <!-- 玩家2的方块面板（对战模式） -->
    <GridPane fx:id="brickPanel2" vgap="0" hgap="0" visible="false"/>
    
    <!-- 玩家2的游戏板（对战模式） -->
    <BorderPane styleClass="gameBoard" fx:id="gameBoard2" layoutX="420" layoutY="300" visible="false">
        <center>
            <GridPane fx:id="gamePanel2" hgap="0" vgap="1" prefWidth="202" maxWidth="202"/>
        </center>
        <top>
            <VBox spacing="10" alignment="CENTER">
                <Label text="PLAYER 2" styleClass="nextBrickLabel"/>
                <Label text="SCORE" styleClass="nextBrickLabel"/>
                <Label fx:id="scoreLabel2" text="0" styleClass="scoreClass" visible="false"/>
            </VBox>
        </top>
    </BorderPane>

    <!-- 玩家1通知组：加分提示 -->
    <Group fx:id="groupNotification" layoutX="0" layoutY="0"/>
    
    <!-- 玩家2通知组：加分提示 -->
    <Group fx:id="groupNotification2" layoutX="0" layoutY="0" visible="false"/>

    <!-- 全局状态提示：暂停、GameOver (顶部居中) -->
    <StackPane layoutX="50" layoutY="50" prefWidth="2000" alignment="CENTER" mouseTransparent="true">
        <children>
             <GameOverPanel fx:id="gameOverPanel"/>
             <PausePanel fx:id="pausePanel"/>
             <GameOverPanel fx:id="gameOverPanel2"/>
             <PausePanel fx:id="pausePanel2"/>
        </children>
    </StackPane>
    
    <!-- 玩家1的下一个方块预览和按钮 -->
    <VBox fx:id="player1Options" layoutX="1200" layoutY="300" spacing="10" alignment="CENTER" styleClass="sidePanel">
        <Label text="NEXT" styleClass="nextBrickLabel"/>
        <GridPane fx:id="nextBrickPanel" hgap="1" vgap="1" styleClass="nextBrick" alignment="CENTER">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
        </GridPane>
        <VBox spacing="8" alignment="CENTER">
            <Label text="DIFFICULTY" styleClass="nextBrickLabel"/>
            <HBox spacing="5" alignment="CENTER">
                <Button fx:id="easyButton" text="Easy" styleClass="difficultyButton" prefWidth="60"/>
                <Button fx:id="hardButton" text="Hard" styleClass="difficultyButton" prefWidth="60"/>
            </HBox>
            <ToggleButton fx:id="vsModeButton" text="VS Mode" styleClass="gameButton" prefWidth="120"/>
            <Button fx:id="newGameButton" text="New Game" styleClass="gameButton" prefWidth="120"/>
            <Button fx:id="pauseButton" text="Pause" styleClass="gameButton" prefWidth="120"/>
        </VBox>
    </VBox>
    
    <!-- 玩家2的下一个方块预览（对战模式） -->
    <VBox fx:id="nextBrickVBox2" layoutX="655" layoutY="300" spacing="10" alignment="CENTER" visible="false" styleClass="sidePanel">
        <Label text="NEXT" styleClass="nextBrickLabel"/>
        <GridPane fx:id="nextBrickPanel2" hgap="1" vgap="1" styleClass="nextBrick" alignment="CENTER">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
        </GridPane>
    </VBox>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>